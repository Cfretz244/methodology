package pieces;

import java.util.HashSet;
import java.util.Set;

import chess.Board;
import chess.Color;

public class Rook extends Piece {
	
	public Rook(int x, int y, Color team) {
		super(x, y, team);
		rank = "R";
	}
	
	public Set<int[]> validMoves() {
		Set<int[]> moves = new HashSet<int[]>();

		if (!hasMoved) moves.add(new int[] {Board.KING_STARTING_X, y});
		boolean hasMoves = true;
		for (int i = 1; hasMoves; i++) {
			hasMoves = false;
			if (x - i >= 0) {
				hasMoves = true;
				moves.add(new int[] {x - i, y});
			}
			if (x + i < Board.WIDTH) {
				hasMoves = true;
				moves.add(new int[] {x + i, y});
			}
			if (y - i >= 0) {
				hasMoves = true;
				moves.add(new int[] {x, y - i});
			}
			if (y + i < Board.HEIGHT) {
				hasMoves = true;
				moves.add(new int[] {x, y + i});
			}
		}
		
		return moves;
	}
	
}
