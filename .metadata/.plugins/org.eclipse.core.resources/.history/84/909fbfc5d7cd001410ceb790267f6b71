package pieces;

import java.util.ArrayList;

import chess.Board;
import chess.Color;
import chess.Location;

public class Pawn extends Piece {
	
	public Pawn(int x, int y, Color team) {
		super(x, y, team);
		rank = "p";
	}
	
	public ArrayList<ArrayList<Location>> validMoves() {
		ArrayList<ArrayList<Location>> moves = new ArrayList<ArrayList<Location>>();
		moves.add(new ArrayList<Location>());

		if (y + 1 < Board.HEIGHT) moves.get(0).add(new Location(x, y + 1));
		if (!hasMoved) moves.get(0).add(new Location(x, y + 2));

		return moves;
	}
	
}
