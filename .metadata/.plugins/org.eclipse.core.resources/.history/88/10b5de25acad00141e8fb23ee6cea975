package songlib;

import java.util.ArrayList;

public class SongList extends ArrayList<Song> {

	private static final long serialVersionUID = 1;

	public boolean add(Song song) {
		if (this.size() > 0) {


			super.add(index, song);
		} else {
			super.add(song);
		}

		return true;
	}

	private int binarySearch(Song song) {
		int index = 0, low = 0, high = size() - 1;
		while (true) {
			int mid = (low + high) / 2;
			Song current = get(mid);
			if (current.compareTo(song) > 0) {
				high = mid - 1;
				if (low > high) {
					index = mid + 1;
					break;
				}
			} else {
				low = mid + 1;
				if (low > high) {
					index = mid;
					break;
				}
			}
		}
	}

}
