package pieces;

import java.util.ArrayList;

import chess.Board;
import chess.Color;
import chess.Location;

public class Pawn extends Piece {
	
	public Pawn(int x, int y, Color team) {
		super(x, y, team);
		rank = "p";
	}
	
	public ArrayList<Location>[] validMoves() {
		int[][][] moves = new int[1][2][2];

		if (!hasMoved) moves[0][0] = new int[] {x, y + 2};
		if (y + 1 < Board.HEIGHT) moves[0][1] = new int[] {x, y + 1};

		return moves;
	}
	
}
